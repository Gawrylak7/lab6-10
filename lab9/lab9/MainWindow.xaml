<Window x:Class="lab9.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab9"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Button Margin="10" Click="ButtonAdd_OnClick">Dodaj Studenta</Button>
            <Button Margin="10" Click="ButtonRemove_OnClick">Usuń Studenta</Button>
            <Button Margin="10" Click="ButtonGrades_OnClick">Oceny Studenta</Button>
        </StackPanel>
        <DataGrid x:Name="dgStudent"></DataGrid>
    </StackPanel>
</Window>